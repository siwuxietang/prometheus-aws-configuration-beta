[
  {
    "name": "prometheus",
    "image": "prom/prometheus",
    "cpu": 1024,
    "memory": 2048,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9090
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "prometheus-config",
        "containerPath": "/etc/prometheus/"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  }
]
